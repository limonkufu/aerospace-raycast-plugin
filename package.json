{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "aerospace",
  "title": "aerospace",
  "description": "Aerospace Window Management",
  "icon": "command-icon.png",
  "author": "limonkufu",
  "categories": [
    "Productivity",
    "Applications",
    "System"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "configPath",
      "type": "textfield",
      "placeholder": "path/to/config",
      "default": "~/.aerospace.toml",
      "title": "Config File",
      "required": false,
      "description": "Specify the config file path for aerospace"
    }
  ],
  "commands": [
    {
      "name": "shortcuts",
      "title": "Aerospace Shortcuts",
      "description": "All of the shortcuts of the aerospace parsed from your config file",
      "mode": "view"
    },
    {
      "name": "showConfig",
      "title": "Aerospace Config",
      "description": "Show config of the aerospace",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@raycast/api": "^1.69.2",
    "@raycast/utils": "^1.15.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "react-devtools": "^4.28.4",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
